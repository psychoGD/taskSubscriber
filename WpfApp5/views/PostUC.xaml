<UserControl x:Class="WpfApp5.views.PostUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp5.views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">
        <StackPanel>
            <Image Width="400" Height="380" Source="{Binding Post.ImgPath}"></Image>
            <TextBlock Width="400" Height="20" Text="{Binding Post.name}"></TextBlock>
            <Button Width="400" Height="40" Content="Follow" Foreground="Black" FontSize="16"
                    Background="White" BorderThickness="0" ></Button>
        </StackPanel>
    </Grid>
</UserControl>
